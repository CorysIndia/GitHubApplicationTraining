<RSIControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="UGP_EDRF.FoxFaceplates.Controller.Detail.BIASCntrl"
	Width="145" 
	Height="250"
	Background="#ADADAD">
    <RSICanvas>
        <RSIRectangle
	        Width="145"
	        Height="35"
	        Stroke="#FFFFFF"
	        StrokeThickness="1" />

        <Rectangle Canvas.Left="110"
	        Canvas.Top="35"
	        Width="35"
	        Height="215"
	        Stroke="#FFFFFF"
	        StrokeThickness="1" />
        <Rectangle
	        Canvas.Top="35"
	        Width="110"
	        Height="215"
	        Fill="#858585"
	        Stroke="#FFFFFF"
	        StrokeThickness="1" />
        <TextBlock Canvas.Left="15"
	        Canvas.Top="99"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#C8C8C8"
	        Text="H" />
        <RSIText Canvas.Left="15"
	        Canvas.Top="45"
	        Width="85"
	        Height="15"
	        VerticalContentAlignment="Center"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#C8C8C8"
	        Text="\$TAGNAME.EI2\" />
        <TextBlock Canvas.Left="15"
	        Canvas.Top="149"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#C8C8C8"
	        Text="L" />
        <RSIText Canvas.Left="15"
	        Canvas.Top="115"
	        Width="85"
	        Height="15"
	        HorizontalContentAlignment="Right"
	        VerticalContentAlignment="Center"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#C8C8C8"
	        Text="\$TAGNAME.HSCI2:#.##\" />
        <RSIText Canvas.Left="15"
	        Canvas.Top="165"
	        Width="85"
	        Height="15"
	        HorizontalContentAlignment="Right"
	        VerticalContentAlignment="Center"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#C8C8C8"
	        Text="\$TAGNAME.LSCI2:#.####\" />
        <RSIText Canvas.Left="15"
	        Canvas.Top="65"
	        Width="85"
	        Height="15"
	        HorizontalContentAlignment="Right"
	        VerticalContentAlignment="Center"
	        Background="#858585"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#FFFFFF"
	        Text="\$TAGNAME.BIAS:#.####\">
            <RSIText.Animations>
                <Animation Condition="#input == 7">
                    <ChangePropertyValue PropertyName="BorderBrush" Value="Yellow"/>
                    <ChangePropertyValue PropertyName="BorderThickness" Value="2"/>
                </Animation>
                <ClickAnimation>
                    <Assignment Expression="7" Variable="#input" />
                </ClickAnimation>
            </RSIText.Animations>
        </RSIText>
        <TextBlock Canvas.Left="10"
	        Canvas.Top="9"
	        FontFamily="Fixedsys"
	        FontSize="10.667"
	        Foreground="#000000"
	        Text="BIAS" />
    </RSICanvas>
</RSIControl>