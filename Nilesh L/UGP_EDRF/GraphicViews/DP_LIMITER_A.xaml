<RSIFacePlate x:Class="UGP_EDRF.DP_LIMITER_A" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:local="clr-namespace:UGP_EDRF" 
             mc:Ignorable="d"> 
	<Grid>
		<!--  Graphic Part  -->
		<local:DP_LIMITER_A_Translation x:Name="GRAPHIC" d:IsLocked="True"  />

		<!-- Normal Graphic Layer Path -->
		<Canvas x:Name="GRAPHIC_OVERLAY">
            <RSIText x:Name="Label"
          Width="315"
          Height="28"
          Foreground="#FF000000"
          IsHitTestVisible="False"
          TextElement.FontFamily="Arial"
          TextElement.FontSize="10"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="DP LIMIT CONTROL ON K-0003A" />
            <RSIText x:Name="SP_VAL"
          Canvas.Left="205.657"
          Canvas.Top="42.537"
          Width="73.575"
          Height="14.057"
          HorizontalAlignment="Right"
          VerticalAlignment="Stretch"
          Foreground="#FF00FF00"
          Text="345.5 "
          TextElement.FontFamily="Arial"
          TextElement.FontSize="10"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center">
                <RSIText.Animations>
                    <Animation>
                        <ChangeText Text="\$TAGNAME.SPT:#.#\ "/>
                    </Animation>
                </RSIText.Animations>
            </RSIText>
            <RSIText x:Name="PV_VAL_Copy"
          Canvas.Left="203.782"
          Canvas.Top="75"
          Width="75.45"
          Height="14.057"
          HorizontalAlignment="Right"
          VerticalAlignment="Stretch"
          Foreground="#FF00FF00"
          Text="345.5 "
          TextElement.FontFamily="Arial"
          TextElement.FontSize="10"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center">
                <RSIText.Animations>
                    <Animation>
                        <ChangeText Text="\$TAGNAME.MEAS:#.#\ "/>
                    </Animation>
                </RSIText.Animations>
            </RSIText>
            <RSIText x:Name="SP_UNIT_Copy1"
          Canvas.Left="232.54"
          Canvas.Top="59.094"
          Width="46.692"
          Height="12.406"
          HorizontalAlignment="Right"
          Foreground="#FFFFFFFF"
          IsHitTestVisible="False"
          Text="PSI"
          TextElement.FontFamily="Arial"
          TextElement.FontSize="9"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF343434" />
            <RSIText x:Name="SP_UNIT_Copy"
          Canvas.Left="232.54"
          Canvas.Top="89.057"
          Width="46.692"
          Height="12.406"
          HorizontalAlignment="Right"
          Foreground="#FFFFFFFF"
          IsHitTestVisible="False"
          Text="PSI"
          TextElement.FontFamily="Arial"
          TextElement.FontSize="9"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF343434" />
            <RSIText
          x:Name="OP_CMD"
          Canvas.Left="203.032"
          Canvas.Top="106.463"
          Width="76.2"
          Height="14.148"
          HorizontalAlignment="Right"
          Foreground="#FF0000FF"
          Text="345.5 "
          TextElement.FontFamily="Arial"
          TextElement.FontSize="10"
          TextElement.FontWeight="Bold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" IsInput="True">
                <!--RSIText.Animations>
                                        <Animation>
                                            <ChangeText Text="{Value Value, Converter={FormatConverter F1}}" />
                                        </Animation>
                                        <Animation Condition="Value_Fail">
                                            <ChangeColor Color="#FF0000FF" />
                                        </Animation>
                                    </-->
                <RSIText.Animations>
                    <Animation Condition="$TAGNAME.MODE == 0">
                        <ChangePropertyValue PropertyName="IsInput" Value="True"/>
                    </Animation>
                    <Animation Condition="$TAGNAME.MODE == 1">
                        <ChangePropertyValue PropertyName="IsInput" Value="False"/>
                    </Animation>
                    <Animation>
                        <ChangeText Text="\$TAGNAME.OUT:#.#\"/>
                    </Animation>
                </RSIText.Animations>
            </RSIText>
        </Canvas>

		<!-- FOD Part -->
		<Canvas x:Name='FOD' Visibility="{FODBinding}" d:IsLocked="True">
		<!-- Start FOD -->
		<!-- Stop FOD -->
		</Canvas>

		<!-- BL Part -->
		<Canvas x:Name='BL' Visibility='{BLBinding}' d:IsLocked="True" >
		<!-- Start BL -->
		<!-- Stop BL -->
		</Canvas>

		<!-- FAILURE Part -->
		<Canvas x:Name='FAILURE' Visibility='{FAILUREBinding}' d:IsLocked="True" >
		<!-- Start FAILURE -->
		<!-- Stop FAILURE -->
		</Canvas>

	</Grid>
</RSIFacePlate>
