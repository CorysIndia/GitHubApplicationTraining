<RSIFacePlate
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
	mc:Ignorable="d"
	x:Class="UGP_EDRF.Faceplates.CONFIRMATION_SCREEN_PLS02"
	Width="600" 
	Height="140"
	Background="LightGray">
    <RSICanvas Width="600"
             Height="140"
             TextElement.FontFamily="Arial"
             TextElement.FontSize="12">
        <RSIRectangle x:Name="Rectangle2"
                  Width="600"
                  Height="140"
                  Fill="#FF9A9A9A"
                  Stroke="#FF000000"
                  StrokeThickness="1" />
        <hmi:QuickLinkButton x:Name="QuickLinkButton1"
                         Canvas.Left="248"
                         Canvas.Top="67"
                         Width="101"
                         Height="42" NameStore="CANCEL" />
        <hmi:QuickLinkButton x:Name="QuickLinkButton2"
                         Canvas.Left="25"
                         Canvas.Top="67"
                         Width="101"
                         Height="42" />
        <hmi:QuickLinkButton x:Name="QuickLinkButton3"
                         Canvas.Left="466"
                         Canvas.Top="67.00001"
                         Width="101"
                         Height="42" />
        <RSIText x:Name="LabelTxt"
            Canvas.Left="32.444"
            Canvas.Top="71.894"
            Width="86.44"
            Height="33.606"
            Foreground="#FF000000"
            IsHitTestVisible="False"
            TextElement.FontFamily="Arial"
            TextElement.FontSize="10"
            TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" Text="OK" Cursor="Hand" >
            <RSIText.Animations>
                <ClickAnimation>
                    <Assignment Expression="True" Variable="$ZZCMD_UO.IN"/>
                </ClickAnimation>
                <Animation Condition="$ZZCMD_UO.IN == 1">
                    <ChangePropertyValue PropertyName="Background" Value="Lime"/>
                </Animation>
            </RSIText.Animations>
        </RSIText>
        <RSIText x:Name="LabelTxt_Copy"
            Canvas.Left="473.444"
            Canvas.Top="71.894"
            Width="86.44"
            Height="33.606"
            Foreground="#FF000000"
            IsHitTestVisible="False"
            TextElement.FontFamily="Arial"
            TextElement.FontSize="10"
            TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" Text="NOT OK" Cursor="Hand" >
            <RSIText.Animations>
                <ClickAnimation>
                    <Assignment Expression="False" Variable="$ZZCMD_UO.IN"/>
                </ClickAnimation>
                <Animation Condition="$ZZCMD_UO.IN == 0">
                    <ChangePropertyValue PropertyName="Background" Value="Lime"/>
                </Animation>
            </RSIText.Animations>
        </RSIText>
        <RSIText x:Name="LabelTxt_Copy1"
            Canvas.Left="127.778"
            Canvas.Top="18.558"
            Width="341.106"
            Height="22.939"
            Foreground="#FF000000"
            IsHitTestVisible="False"
            TextElement.FontFamily="Arial"
            TextElement.FontSize="10"
            TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="$ConfirmationMessage" />
        <RSIText x:Name="LabelTxt_Copy2"
            Canvas.Left="256.454"
            Canvas.Top="71.894"
            Width="86.44"
            Height="33.606"
            Foreground="#FF000000"
            IsHitTestVisible="False"
            TextElement.FontFamily="Arial"
            TextElement.FontSize="10"
            TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" Text="CANCEL" Cursor="Hand" >
            <RSIText.Animations>
                <ClickAnimation>
                    <Close/>
                </ClickAnimation>
            </RSIText.Animations>
        </RSIText>
        <RSIRectangle Fill="#FFF4F4F5" Height="33.606" Canvas.Left="32.444" Stroke="Black" Canvas.Top="71.894" Width="86.44" Opacity="0" Cursor="Hand">
            <RSIRectangle.Animations>
                <ClickAnimation>
                    <Assignment Expression="True" Variable="$ZZCMD_UO.IN"/>
                </ClickAnimation>
            </RSIRectangle.Animations>
        </RSIRectangle>
        <RSIRectangle Fill="#FFF4F4F5" Height="33.606" Canvas.Left="472.449" Stroke="Black" Canvas.Top="71.894" Width="86.44" Opacity="0" Cursor="Hand">
            <RSIRectangle.Animations>
                <ClickAnimation>
                    <Assignment Expression="False" Variable="$ZZCMD_UO.IN"/>
                </ClickAnimation>
            </RSIRectangle.Animations>
        </RSIRectangle>
        <RSIRectangle Fill="#FFF4F4F5" Height="33.606" Canvas.Left="255.954" Stroke="Black" Canvas.Top="71.894" Width="86.44" Opacity="0" Cursor="Hand">
            <RSIRectangle.Animations>
                <ClickAnimation>
                    <Close/>
                </ClickAnimation>
            </RSIRectangle.Animations>
        </RSIRectangle>
    </RSICanvas>
</RSIFacePlate>