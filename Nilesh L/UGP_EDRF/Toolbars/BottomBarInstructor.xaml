      <Grid.Resources>
        <Style TargetType="{x:Type Button}">
          <Setter Property="Foreground" Value="#FF0050A0" />
          <Setter Property="Background" Value="#FFABABAB" />
        </Style>
      </Grid.Resources>
      <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

