<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="{x:Type hmi:SYM_RATIO_01}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hmi:SYM_RATIO_01}">
                    <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
                        <RSIGrid Background="Transparent">
                            <RSICanvas Width="158"
                         Height="92.77778"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                                <RSIRectangle x:Name="BACKGROUND"
                              Canvas.Left="47.9999"
                              Canvas.Top="41.6667"
                              Width="78.66666"
                              Height="51.11108"
                              Fill="#FFCCCCCC"
                              Stroke="#FF000000"
                              StrokeThickness="1" />
                                <RSIText x:Name="TH"
                         Canvas.Left="109.3287"
                         Canvas.Top="74.2311"
                         Width="14.61035"
                         Height="16.75781"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="#"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                                    <RSIText.Animations>
                                        <Animation Condition="$TAGNAME.HOLD == 0">
                                            <ChangeText Text="T"/>
                                        </Animation>
                                        <Animation Condition="$TAGNAME.HOLD == 1">
                                            <ChangeText Text="H"/>
                                        </Animation>

                                    </RSIText.Animations>
                                </RSIText>
                                <RSIText x:Name="LR"
                         Canvas.Left="109.6459"
                         Canvas.Top="58.8874"
                         Width="14.61035"
                         Height="16.75781"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="#"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                                    <RSIText.Animations>
                                        <!--<Animation Condition="($BLKSTA AND 0x00000400) shr 10=true">-->
                                        <Animation Condition="$TAGNAME.LR==1">
                                            <ChangeText Text="R" />
                                        </Animation>
                                        <!--<Animation Condition="($BLKSTA AND 0x00000400) shr 10=false">-->
                                        <Animation Condition="$TAGNAME.LR==0">
                                            <ChangeText Text="L" />
                                        </Animation>

                                    </RSIText.Animations>
                                </RSIText>
                                <RSIText x:Name="MA"
                         Canvas.Left="109.5724"
                         Canvas.Top="41.2506"
                         Width="14.61035"
                         Height="16.75781"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="#"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                                    <RSIText.Animations>
                                        <Animation Condition="$TAGNAME.MA==1">
                                            <!--<Animation Condition="($BLKSTA AND 0x00000800) shr 11=true">-->
                                            <ChangeText Text="A" />
                                        </Animation>
                                        <Animation Condition="$TAGNAME.MA==0">
                                            <!--<Animation Condition="($BLKSTA AND 0x00000800) shr 11=false">-->
                                            <ChangeText Text="M" />
                                        </Animation>
                                    </RSIText.Animations>
                                </RSIText>
                                <RSIText x:Name="OUT_VALUE"
                         Canvas.Left="52.4"
                         Canvas.Top="74.3777"
                         Width="50"
                         Height="18"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="\$TAGNAME.OUT:#.##\"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap"/>
                                <RSIText x:Name="RATIO_VALUE"
                         Canvas.Left="52.4"
                         Canvas.Top="57.6"
                         Width="50"
                         Height="18"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="\$TAGNAME_AOUT.OUT:#.##\"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap"/>
                                <RSIText x:Name="MEAS_VALUE"
                         Canvas.Left="52.4"
                         Canvas.Top="41.2667"
                         Width="50"
                         Height="18"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="#FFE0E0E0"
                         BorderBrush="#FFE0E0E0"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="11"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap" Text="\$TAGNAME_MEAS.Value:#.##\"/>
                                <RSIText x:Name="EU"
                         Canvas.Left="92"
                         Width="66"
                         Height="41"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Bottom"
                         Background="#00EFEFEF"
                         BorderBrush="#00000000"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="\$TAGNAME.EO1\"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12"
                         TextWrapping="Wrap"/>
                                <RSIText x:Name="LABEL"
                         Canvas.Top="1"
                         Width="83.99976"
                         Height="40"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Bottom"
                         Background="#00EFEFEF"
                         BorderBrush="#00000000"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="{TemplateBinding TAGNAME}"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12"
                         TextWrapping="Wrap"/>
                                <hmi:SYM_ALARMBORDER_01 x:Name="ALARMBORDER"
                                        Canvas.Left="47.9999"
                                        Canvas.Top="41.6667"
                                        Width="78.66666"
                                        Height="51.11108"
                                        _CONN1="{TemplateBinding ALMSTA}" />
                                <hmi:SYM_PAGE_ACK_01 x:Name="ACK_SYMBOL"
                                     Canvas.Left="47.9999"
                                     Canvas.Top="41.6667"
                                     Width="78.66666"
                                     Height="51.11108" />
                                <hmi:FP_CallOverlay x:Name="FP_CallOverlay1"
                                    Canvas.Left="47.9998000000001"
                                    Canvas.Top="41.6667"
                                    Width="78.66663"
                                    Height="51.11108"
                                    BLKOVL="{TemplateBinding BLK}"
                                    CMPOVL="{TemplateBinding CMP}"
                                    LOC="{TemplateBinding LOC}"
                                    OverlayName="FP_RATIO"
                                    PRT="{TemplateBinding PRT}" />
                                <RSIRectangle x:Name="Alarm_Rectangle" 
                                              Height="53.938" 
                                              Canvas.Left="46.908" 
                                              Stroke="#00666666" 
                                              StrokeThickness="2" 
                                              Canvas.Top="40.062" 
                                              Width="80.6"
                                              Focusable="False"
                                              IsHitTestVisible="False">
                                    <RSIRectangle.Animations>
                                        <Animation Condition="$TAGNAME.MEASLIAlarms[0] == 1 OR $TAGNAME.MEASHIAlarms[0] == 1 OR $TAGNAME.LLAINDAlarms[0] == 1 OR $TAGNAME.HHAINDAlarms[0] == 1" IsContinuous="True">
                                            <ChangePropertyValue PropertyName="Stroke" Value="#FF5C5C5C" />
                                            <Blink/>
                                        </Animation>
                                        <Animation Condition="$TAGNAME.MEASLIAlarms[0] == 2 OR $TAGNAME.MEASHIAlarms[0] == 2" IsContinuous="True">
                                            <ChangePropertyValue PropertyName="Stroke" Value="#FFB97A57" />
                                        </Animation>
                                        <Animation Condition="$TAGNAME.MEASLIAlarms[0] == 3 OR $TAGNAME.MEASHIAlarms[0] == 3" IsContinuous="True">
                                            <ChangePropertyValue PropertyName="Stroke" Value="#FFB97A57" />
                                            <Blink/>
                                        </Animation>
                                        <Animation Condition="$TAGNAME.LLAINDAlarms[0] == 2 OR $TAGNAME.HHAINDAlarms[0] == 2" IsContinuous="True">
                                            <ChangePropertyValue PropertyName="Stroke" Value="red" />
                                        </Animation>
                                        <Animation Condition="$TAGNAME.LLAINDAlarms[0] == 3 OR $TAGNAME.HHAINDAlarms[0] == 3" IsContinuous="True">
                                            <ChangePropertyValue PropertyName="Stroke" Value="red" />
                                            <Blink/>
                                        </Animation>
                                    </RSIRectangle.Animations>
                                </RSIRectangle>
                            </RSICanvas>
                        </RSIGrid>
                    </RSIViewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="StandardFaceplateName" Value="FP_RATIO"/>

    </Style>
</ResourceDictionary>