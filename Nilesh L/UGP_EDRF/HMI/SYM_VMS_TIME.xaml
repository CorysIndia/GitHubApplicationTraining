<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:SYM_VMS_TIME}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:SYM_VMS_TIME}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="190"
                         Height="150.75"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIBorder x:Name="Line3"
                           Canvas.Left="-0.75"
                           Canvas.Top="49.25"
                           Width="190"
                           Height="1.5">
                  <RSIPath Data="M-0.75,49.25 L189.25,49.25"
                           Stretch="Fill"
                           Stroke="#FF000000"
                           StrokeThickness="1" />
                </RSIBorder>
                <RSIBorder x:Name="Line1"
                           Canvas.Left="-0.75"
                           Canvas.Top="149.25"
                           Width="190"
                           Height="1.5">
                  <RSIPath Data="M-0.75,149.25 L189.25,149.25"
                           Stretch="Fill"
                           Stroke="#FF000000"
                           StrokeThickness="1" />
                </RSIBorder>
                <RSIText x:Name="HHMMSS"
                         Canvas.Left="60"
                         Canvas.Top="100"
                         Width="100"
                         Height="50"
                         VerticalContentAlignment="Center"
                         BorderBrush="Transparent"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="HH/MM/SS"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                  <RSIText.Animations>
                    <Animation>
                      <ChangeText Text="HOUR_+_____+_MIN_+_____+_SEC" />
                    </Animation>
                  </RSIText.Animations>
                </RSIText>
                <RSIText x:Name="TIME"
                         Canvas.Top="100"
                         Width="50"
                         Height="50"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         BorderBrush="Transparent"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="TIME:"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap" />
                <RSIText x:Name="DDMMYY"
                         Canvas.Left="60"
                         Canvas.Top="50"
                         Width="100"
                         Height="50"
                         VerticalContentAlignment="Center"
                         BorderBrush="Transparent"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="DD/MM/YY"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                  <RSIText.Animations>
                    <Animation>
                      <ChangeText Text="DAY_+__/__+_MONTH_+__/__+_YEAR" />
                    </Animation>
                  </RSIText.Animations>
                </RSIText>
                <RSIText x:Name="DATE"
                         Canvas.Top="50"
                         Width="50"
                         Height="50"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         BorderBrush="Transparent"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="DATE:"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap" />
                <RSIText x:Name="TextBox1"
                         Width="190"
                         Height="50"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         BorderBrush="Transparent"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="RACK DATE/TIME"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap" />
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>