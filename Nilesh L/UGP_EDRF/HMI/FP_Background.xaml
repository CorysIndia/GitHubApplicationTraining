<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:FP_Background}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:FP_Background}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="1000"
                         Height="750"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIRectangle x:Name="CALCA"
                              Width="1000"
                              Height="750"
                              Fill="#FF000000"
                              Stroke="#FF000000"
                              StrokeThickness="1"
                              Visibility="{TemplateBinding TYPE,
                                                           Converter={EqualConverter CALCA}}" />
                <RSIRectangle x:Name="LIGHTCOLOR"
                              Width="500"
                              Height="451"
                              Fill="#FFCCCCCC"
                              Stroke="#FF717171"
                              StrokeThickness="1"
                              Visibility="{TemplateBinding TYPE,
                                                           Converter={EqualConverter LIGHT}}" />
                <RSIRectangle x:Name="STANDARD"
                              Width="500"
                              Height="451"
                              Fill="#FF717171"
                              Stroke="#FF717171"
                              StrokeThickness="1"
                              Visibility="{TemplateBinding TYPE,
                                                           Converter={EqualConverter STANDARD}}" />
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>