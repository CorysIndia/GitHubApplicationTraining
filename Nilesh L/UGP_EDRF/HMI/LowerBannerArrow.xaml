<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:LowerBannerArrow}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:LowerBannerArrow}">
          <Grid x:Name="Line6" Margin="0,-1.75,0,-1.75">
            <RSIPath x:Name="Line"
                     Margin="0,0,3,0"
                     Data="M0,0 L1,0"
                     Stretch="Fill"
                     Stroke="#FF000000"
                     StrokeThickness="3" />
            <RSIPath x:Name="Arrow"
                     Margin="0,1.5,0,-1.5"
                     HorizontalAlignment="Right"
                     Data="M0,0 L5,2 0,4Z"
                     Fill="#FF000000"
                     Stroke="#FF000000"
                     StrokeThickness="3" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>