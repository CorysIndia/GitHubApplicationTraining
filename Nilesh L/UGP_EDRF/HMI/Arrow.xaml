<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:Arrow}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:Arrow}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="15.000001907349"
                         Height="14.12"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIPath x:Name="Utility"
                         Canvas.Left="4.76838E-07"
                         Width="15"
                         Height="14.12"
                         Data="M0,1 L0.5012779,0 1,0.9994334 z"
                         Fill="#FF666666"
                         Stretch="Fill"
                         Stroke="Transparent"
                         StrokeThickness="1"
                         Visibility="{TemplateBinding Type,
                                                      Converter={EqualConverter Utility}}" />
                <RSIPath x:Name="Sub"
                         Width="15"
                         Height="14.12"
                         Data="M0,1 L0.5012779,0 1,0.9994334 z"
                         Fill="#FF9A9A9A"
                         Stretch="Fill"
                         Stroke="Transparent"
                         StrokeThickness="1"
                         Visibility="{TemplateBinding Type,
                                                      Converter={EqualConverter Sub}}" />
                <RSIPath x:Name="Main"
                         Width="15"
                         Height="14.12"
                         Data="M0,1 L0.5012779,0 1,0.9994334 z"
                         Fill="#FF343434"
                         Stretch="Fill"
                         Stroke="Transparent"
                         StrokeThickness="1"
                         Visibility="{TemplateBinding Type,
                                                      Converter={EqualConverter Main}}" />
                <RSIPath x:Name="Steam"
                         Canvas.Left="1.907349E-06"
                         Width="15"
                         Height="14.12"
                         Data="M0,1 L0.5012779,0 1,0.9994334 z"
                         Fill="#FF9A9A9A"
                         Stretch="Fill"
                         Stroke="Transparent"
                         StrokeThickness="1"
                         Visibility="{TemplateBinding Type,
                                                      Converter={EqualConverter Steam}}" />
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>