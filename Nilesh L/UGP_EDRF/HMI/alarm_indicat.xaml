<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:alarm_indicat}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:alarm_indicat}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="30"
                         Height="30"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIEllipse x:Name="Ellipse1"
                            Width="30"
                            Height="30"
                            Fill="#FF9A9A9A"
                            Stroke="#FF000000"
                            StrokeThickness="1">
                  <RSIEllipse.Animations>
                    <Animation Condition="_CIN==0">
                      <ChangeColor Color="#FFFFFF00" />
                    </Animation>
                  </RSIEllipse.Animations>
                </RSIEllipse>
                <RSIText x:Name="Text1"
                         Canvas.Left="7"
                         Canvas.Top="8"
                         Width="19.57031"
                         Height="17.875"
                         HorizontalAlignment="Left"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         Text="LS"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12" />
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>