<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="{x:Type hmi:dIndTxt_02}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hmi:dIndTxt_02}">
                    <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
                        <RSIGrid Background="Transparent">
                            <RSICanvas Width="399"
                         Height="30"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                                <RSIRectangle x:Name="Rectangle3"
                              Width="399"
                              Height="30"
                              Stroke="#FF343434"
                              StrokeThickness="1">
                                    <RSIRectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Offset="0.5" Color="#FF000000" />
                                            <GradientStop Offset="0" Color="#FFBFBFBF" />
                                            <GradientStop Offset="1" Color="#FFBFBFBF" />
                                        </LinearGradientBrush>
                                    </RSIRectangle.Fill>
                                </RSIRectangle>
                                <RSICanvas Name="Group7"
                           Width="391.2774"
                           Height="24"
                           Left="3"
                           Top="3">
                                    <RSIRectangle x:Name="Rectangle4"
                                Width="391.2774"
                                Height="24"
                                Stroke="#FF000000"
                                StrokeThickness="1">
                                        <RSIRectangle.Fill>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="1" Color="#FF666666" />
                                                <GradientStop Offset="0" Color="#FF343434" />
                                            </LinearGradientBrush>
                                        </RSIRectangle.Fill>
                                    </RSIRectangle>
                                    <RSIText x:Name="Text3"
                           Canvas.Left="4.817"
                           Canvas.Top="5.076"
                           Width="174.842"
                           Height="14.523"
                           VerticalAlignment="Center"
                           Foreground="#FFFFFFFF"
                           Text="{TemplateBinding ZModeDescription}"
                           TextElement.FontFamily="Arial"
                           TextElement.FontSize="10"
                           TextElement.FontWeight="Bold" VerticalContentAlignment="Center"/>
                                    <RSIText x:Name="Text3_Copy"
                                        Canvas.Left="296.435"
                                        Canvas.Top="5.076"
                                        Width="84.842"
                                        Height="14.523"
                                        VerticalAlignment="Center"
                                        Foreground="Cyan"
                                        Text="{TemplateBinding ZModeStatus}"
                                        TextElement.FontFamily="Arial"
                                        TextElement.FontSize="10"
                                        TextElement.FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                </RSICanvas>
                            </RSICanvas>
                        </RSIGrid>
                    </RSIViewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>