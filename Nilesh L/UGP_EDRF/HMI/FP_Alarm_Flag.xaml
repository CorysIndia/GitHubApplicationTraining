<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:FP_Alarm_Flag}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:FP_Alarm_Flag}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="26.50707"
                         Height="12.5"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIPath x:Name="Flag_LL_V"
                         Canvas.Left="-0.249930000000006"
                         Canvas.Top="5.25"
                         Width="26.757"
                         Height="7.25"
                         Data="M0,0 L1,0 0.9997281,1 0.7641508,0.04 0.7830192,0.04 "
                         Stretch="Fill"
                         Stroke="#FF666666"
                         StrokeThickness="1">
                  <RSIPath.Animations>
                    <Animation Condition="HHAOPT_==_1_or_HHAOPT_==_3==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="HHAOPT_==_1_or_HHAOPT_==_3==false">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
                <RSIPath x:Name="Flag_L_V"
                         Canvas.Left="-0.5"
                         Canvas.Top="5.5"
                         Width="27"
                         Height="7"
                         Data="M0,0 L1,0 1,1 "
                         Stretch="Fill"
                         Stroke="#FF666666"
                         StrokeThickness="1">
                  <RSIPath.Animations>
                    <Animation Condition="HLOP_==_1_or_HLOP_==_3==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="HLOP_==_1_or_HLOP_==_3==false">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
                <RSIPath x:Name="Flag_H_V"
                         Canvas.Left="-0.499930000000006"
                         Canvas.Top="-0.5"
                         Width="27"
                         Height="7"
                         Data="M0,0 L0,1 0.9866667,1 1,1 "
                         Stretch="Fill"
                         Stroke="#FF666666"
                         StrokeThickness="1">
                  <RSIPath.Animations>
                    <Animation Condition="HLOP_==_1_or_HLOP_==_2==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="HLOP_==_1_or_HLOP_==_2==false">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
                <RSIPath x:Name="Flag_HH_V"
                         Canvas.Left="-0.499930000000006"
                         Canvas.Top="-0.5"
                         Width="27"
                         Height="7"
                         Data="M1,1 L0,1 0,0 0.2413793,1 "
                         Stretch="Fill"
                         Stroke="#FF666666"
                         StrokeThickness="1">
                  <RSIPath.Animations>
                    <Animation Condition="HHAOPT_==_1_or_HHAOPT_==_2==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="HHAOPT_==_1_or_HHAOPT_==_2==false">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>