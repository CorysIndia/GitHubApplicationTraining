<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="{x:Type hmi:PanelBrushed}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hmi:PanelBrushed}">
                    <Border Background="Red"
                  BorderThickness="1">
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0,0.5" StartPoint="0.5,0">
                                <GradientStop Color="#FF5A5A5A"/>
                                <GradientStop Color="#FF656565" Offset="1"/>
                                <GradientStop Color="#FFE2E2E2" Offset="0.448"/>
                                <GradientStop Color="#FFF4EFEF" Offset="0.57"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel>
                            <StackPanel.Background>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                    <GradientStop Color="Gray" Offset="1"/>
                                    <GradientStop Color="Gray"/>
                                    <GradientStop Color="#FFD0D0D0" Offset="0.689"/>
                                    <GradientStop Color="#FFC2C2C2" Offset="0.317"/>
                                </LinearGradientBrush>
                            </StackPanel.Background>
                            <!--TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Text="PanelBrushed" />
              <TextBlock HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Text="" /-->
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>