<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:ButtonBackPanel_HT_III}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:ButtonBackPanel_HT_III}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="610"
                         Height="194"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSICanvas Name="BackPanel"
                           Width="610"
                           Height="194"
                           Left="0"
                           Top="0">
                  <RSIRectangle x:Name="RoundRectangle1"
                                Canvas.Left="1.00000171182"
                                Canvas.Top="-6.103517E-05"
                                Width="609.0001"
                                Height="194"
                                StrokeThickness="2"> 
                    <RSIRectangle.Stroke>
                      <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="1" Color="#FF000000" />
                        <GradientStop Offset="0" Color="#FFFFFFFF" />
                      </LinearGradientBrush>
                    </RSIRectangle.Stroke> 
                  </RSIRectangle>
                  <RSIRectangle x:Name="RoundRectangle2"
                                Canvas.Left="0.999971"
                                Canvas.Top="0.99993896483"
                                Width="607.9999"
                                Height="193"
                                StrokeThickness="0"> 
                    <RSIRectangle.Stroke>
                      <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="1" Color="#FF000000" />
                        <GradientStop Offset="0" Color="#FFFFFFFF" />
                      </LinearGradientBrush>
                    </RSIRectangle.Stroke> 
                    <RSIRectangle.Fill>
                      <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Offset="0" Color="#FFFFFFFF" />
                        <GradientStop Offset="0" Color="#FF000000" />
                        <GradientStop Offset="1" Color="#FF000000" />
                      </LinearGradientBrush>
                    </RSIRectangle.Fill>
                  </RSIRectangle>
                </RSICanvas>
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>