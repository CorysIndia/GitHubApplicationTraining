<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_EDRF.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="{x:Type hmi:Type1_Display_10Letter_III}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hmi:Type1_Display_10Letter_III}">
                    <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
                        <RSIGrid Background="Transparent">
                            <RSICanvas Width="101.8"
                         Height="14.802344"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                                <RSIRectangle x:Name="RoundRectangle3"
                              Width="101"
                              Height="14"
                              StrokeThickness="1">
                                    <RSIRectangle.Stroke>
                                        <RadialGradientBrush>
                                            <GradientStop Offset="0" Color="#FF000000" />
                                            <GradientStop Offset="0" Color="#FFFFFFFF" />
                                            <GradientStop Offset="1" Color="#FF000000" />
                                        </RadialGradientBrush>
                                    </RSIRectangle.Stroke>
                                    <RSIRectangle.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Offset="0" Color="#FF004200" />
                                            <GradientStop Offset="0" Color="#FF000000" />
                                            <GradientStop Offset="1" Color="#FF004200" />
                                        </RadialGradientBrush>
                                    </RSIRectangle.Fill>
                                    <RSIRectangle.Animations>
                                        <Animation Condition="Colour, Converter={IsEqualTo 1}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 2}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 3}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 4}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 5}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 6}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 7}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 8}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                    </RSIRectangle.Animations>
                                </RSIRectangle>
                                <RSIRectangle x:Name="RoundRectangle2"
                              Width="101"
                              Height="14"
                              StrokeThickness="1" Fill="White">
                                    <RSIRectangle.Stroke>
                                        <RadialGradientBrush>
                                            <GradientStop Offset="0" Color="#FF4D4D4D" />
                                            <GradientStop Offset="0" Color="#FFBFBFBF" />
                                            <GradientStop Offset="1" Color="#FF4D4D4D" />
                                        </RadialGradientBrush>
                                    </RSIRectangle.Stroke>
                                    <RSIRectangle.Animations>
                                        <Animation Condition="Value==true">
                                            <SetVisible />
                                        </Animation>
                                        <Animation Condition="Value==false">
                                            <Invisible />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 1}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 2}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 3}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 4}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 5}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 6}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 7}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                        <Animation Condition="Colour, Converter={IsEqualTo 8}">
                                            <ChangeColor Color="" />
                                        </Animation>
                                    </RSIRectangle.Animations>
                                </RSIRectangle>
                                <RSIRectangle x:Name="RoundRectangle1"
                              Canvas.Left="1.8"
                              Canvas.Top="2.637501"
                              Width="100"
                              Height="5"
                              StrokeThickness="0">
                                    <RSIRectangle.Stroke>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Offset="0" Color="#FFE0E0E0" />
                                            <GradientStop Offset="0" Color="#FF4D4D4D" />
                                            <GradientStop Offset="1" Color="#FF4D4D4D" />
                                        </LinearGradientBrush>
                                    </RSIRectangle.Stroke>
                                    <RSIRectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="#FFFFFFFF" />
                                            <GradientStop Offset="0" Color="#00FFFFFF" />
                                            <GradientStop Offset="1" Color="#00FFFFFF" />
                                        </LinearGradientBrush>
                                    </RSIRectangle.Fill>
                                    <RSIRectangle.Animations>
                                        <Animation Condition="Value==true">
                                            <SetVisible />
                                        </Animation>
                                        <Animation Condition="Value==false">
                                            <Invisible />
                                        </Animation>
                                        <Animation Condition="Value">
                                            <ChangeColor Color="" />
                                        </Animation>
                                    </RSIRectangle.Animations>
                                </RSIRectangle>
                                <RSIText x:Name="Text3"
                         Canvas.Left="1.6"
                         Canvas.Top="0.941"
                         Width="98.115"
                         Height="12.277"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Foreground="#FF000000"
                         Text="{TemplateBinding ModelName}"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                    <RSIText.Animations>
                                        <Animation Condition="Value">
                                            <ChangeColor Color="#FF000000" />
                                        </Animation>
                                    </RSIText.Animations>
                                </RSIText>
                                <RSICanvas Name="Group2"
                           Width="96.6"
                           Height="9.999999"
                           Left="1.6"
                           Top="2.237433">
                                    <RSIBorder x:Name="Line2"
                             Canvas.Left="95.84999"
                             Canvas.Top="-0.75"
                             Width="96.59998"
                             Height="9.999996"
                             RenderTransformOrigin="0.00345065633899027,0.033333346666672">
                                        <RSIBorder.RenderTransform>
                                            <TransformGroup>
                                                <RotateTransform Angle="180" />
                                                <ScaleTransform ScaleX="1" ScaleY="-1" />
                                            </TransformGroup>
                                        </RSIBorder.RenderTransform>
                                    </RSIBorder>
                                </RSICanvas>
                            </RSICanvas>
                        </RSIGrid>
                    </RSIViewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>