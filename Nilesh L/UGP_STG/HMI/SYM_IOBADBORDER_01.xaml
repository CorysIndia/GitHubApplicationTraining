<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_STG.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:SYM_IOBADBORDER_01}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:SYM_IOBADBORDER_01}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="74.89417"
                         Height="21.5"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIPath x:Name="PolyLine1"
                         Canvas.Left="-1.5"
                         Canvas.Top="-1.5"
                         Width="76.39417"
                         Height="23"
                         Data="M0,0 L0,1 1,1 1,0 0,0 "
                         Stretch="Fill"
                         Stroke="#FF00FFFB"
                         StrokeThickness="3">
                  <RSIPath.Animations>
                    <Animation Condition="BAD_==_true==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="BAD_==_true==false">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>