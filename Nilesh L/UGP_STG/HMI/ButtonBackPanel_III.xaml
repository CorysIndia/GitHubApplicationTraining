                                    <RSIText x:Name="rSIText01_Copy1" Height="12.168" TextWrapping="Wrap" Width="188.874" VerticalContentAlignment="Center" Foreground="Black" FontSize="12" Canvas.Top="11.459" Background="White" Text="{TemplateBinding hmi:Button.INPUT_01_TEXT02}"/>
                                </RSICanvas>
                            </RSICanvas>
                        </RSIGrid>
                    </RSIViewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>