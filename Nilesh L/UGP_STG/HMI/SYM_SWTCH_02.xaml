<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_STG.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:SYM_SWTCH_02}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:SYM_SWTCH_02}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="40"
                         Height="31.69367"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIRectangle x:Name="Rectangle1"
                              Canvas.Top="2.68349999999998"
                              Width="40"
                              Height="23.85275"
                              Fill="#FFE0E0E0"
                              Stroke="#FF000000"
                              StrokeThickness="1" />
                <RSIPath x:Name="PolyLine1"
                         Canvas.Left="18.5"
                         Canvas.Top="-1.30630000000002"
                         Width="18"
                         Height="32.99997"
                         Data="M0,0 L0,0.3333333 1,0.6666667 1,1 "
                         Stretch="Fill"
                         Stroke="#FF000000"
                         StrokeThickness="3">
                  <RSIPath.Animations>
                                        <Animation Condition="$TAGNAME.value_2 == $TAGNAME.result">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
                <RSIPath x:Name="PolyLine2"
                         Canvas.Left="18.5"
                         Canvas.Top="-1.30630000000002"
                         Width="18"
                         Height="32.51611"
                         Data="M0,0 L0,0.3333333 1,0.6666667 1,1 "
                         RenderTransformOrigin="0.0833333333333333,0.0461309793822201"
                         Stretch="Fill"
                         Stroke="#FF1A1A1A"
                         StrokeThickness="3">
                  <RSIPath.RenderTransform>
                    <TransformGroup>
                      <RotateTransform Angle="180" />
                      <ScaleTransform ScaleX="1" ScaleY="-1" />
                    </TransformGroup>
                  </RSIPath.RenderTransform>
                  <RSIPath.Animations>
                                        <Animation Condition="$TAGNAME.value_1 == $TAGNAME.result">
                      <Invisible />
                    </Animation>
                  </RSIPath.Animations>
                </RSIPath>
                <RSIBorder x:Name="Line1"
                           Canvas.Left="19.6495"
                           Canvas.Top="-0.75"
                           Width="1.5"
                           Height="29.70984"
                           Visibility="{TemplateBinding Connection,
                                                        Converter={EqualConverter 3_SEL}}">
                  <RSIPath Data="M19.6495,-0.75 L19.6495,28.9599"
                           Stretch="Fill"
                           Stroke="#FF000000"
                           StrokeThickness="3">
                    <RSIPath.Animations>
                      <Animation Condition="CONN_==_3==true">
                        <SetVisible />
                      </Animation>
                      <Animation Condition="CONN_==_3==false">
                        <Invisible />
                      </Animation>
                    </RSIPath.Animations>
                  </RSIPath>
                </RSIBorder>
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>