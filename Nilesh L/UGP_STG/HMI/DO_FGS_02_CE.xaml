<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
                    xmlns:hmi="clr-namespace:UGP_STG.HMI"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

  <Style TargetType="{x:Type hmi:DO_FGS_02_CE}">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type hmi:DO_FGS_02_CE}">
          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="36"
                         Height="177.00002"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSIRectangle x:Name="LELAlarm_Rectangle"
                              Canvas.Top="40.00002"
                              Width="36"
                              Height="137"
                              Fill="#FFFF0000"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <Animation />
                    <!--
                      if PICK1 == PICK1VAR_LEL and PICK2 == TAG_LEL then
                      PICK1 = "";
                      PICK2 = "";
                      else
                      PICK1 = PICK1VAR_LEL;
                      PICK2 = TAG_LEL;
                      endif;
                    -->
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="H2SAlarm_Rectangle"
                              Canvas.Top="40.00002"
                              Width="36"
                              Height="137"
                              Fill="#FF0000FF"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <Animation />
                    <!--
                      if PICK1 == PICK1VAR_H2S and PICK2 == TAG_H2S then
                      PICK1 = "";
                      PICK2 = "";
                      else
                      PICK1 = PICK1VAR_H2S;
                      PICK2 = TAG_H2S;
                      endif;
                    -->
                    <Animation Condition="H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="NoAlarm_Rectangle"
                              Canvas.Top="40.00002"
                              Width="36"
                              Height="137"
                              Fill="#FFBCBCBC"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <Animation Condition="not_H2S_ALM==0_and_not_LEL_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="not_H2S_ALM==0_and_not_LEL_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIText x:Name="TAG"
                         Canvas.Top="176.99992"
                         Width="137"
                         Height="36"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FF000000"
                         Foreground="#FF000000"
                         IsHitTestVisible="False"
                         RenderTransformOrigin="0,0"
                         Text="Effect"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="10"
                         TextElement.FontWeight="Bold"
                         TextWrapping="Wrap">
                  <RSIText.RenderTransform>
                    <RotateTransform Angle="-90" />
                  </RSIText.RenderTransform>
                  <RSIText.Animations>
                    <Animation Condition="true, Converter={IsEqualTo H2S_ALM==0}">
                      <ChangeColor Color="#FFFFFFFF" />
                    </Animation>
                    <Animation Condition="true, Converter={IsEqualTo LEL_ALM==0 and not H2S_ALM==0}">
                      <ChangeColor Color="#FFFFFFFF" />
                    </Animation>
                  </RSIText.Animations>
                </RSIText>
                <RSIRectangle x:Name="LELAlarm_Nav"
                              Width="36"
                              Height="40"
                              Fill="#FFE0E0E0"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <ClickAnimation>
                      <Link WindowName="$DISP2" />
                    </ClickAnimation>
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="H2SAlarm_Nav"
                              Width="36"
                              Height="40"
                              Fill="#FFE0E0E0"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <ClickAnimation>
                      <Link WindowName="$DISP" />
                    </ClickAnimation>
                    <Animation Condition="H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="NoAlarm_Nav"
                              Canvas.Top="1.99999999992428E-05"
                              Width="36"
                              Height="40"
                              Fill="#FFE0E0E0"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <ClickAnimation>
                      <Link WindowName="$DISP" />
                    </ClickAnimation>
                    <Animation Condition="not_H2S_ALM==0_and_not_LEL_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="not_H2S_ALM==0_and_not_LEL_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="LELAlarm_Border"
                              Canvas.Left="1.39999999999998"
                              Canvas.Top="41.20002"
                              Width="33.19995"
                              Height="134.6"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="LEL_ALM==0_and_not_H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
                <RSIRectangle x:Name="H2SAlarm_Border"
                              Canvas.Left="1.39999999999998"
                              Canvas.Top="41.20002"
                              Width="33.19995"
                              Height="134.6"
                              Stroke="#FF000000"
                              StrokeThickness="1">
                  <RSIRectangle.Animations>
                    <Animation Condition="H2S_ALM==0==true">
                      <SetVisible />
                    </Animation>
                    <Animation Condition="H2S_ALM==0==false">
                      <Invisible />
                    </Animation>
                  </RSIRectangle.Animations>
                </RSIRectangle>
              </RSICanvas>
            </RSIGrid>
          </RSIViewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>
</ResourceDictionary>