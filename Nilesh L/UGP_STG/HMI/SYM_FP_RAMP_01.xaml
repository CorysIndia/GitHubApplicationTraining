          <RSIViewbox Margin="{TemplateBinding ControlMargin}" Stretch="Fill">
            <RSIGrid Background="Transparent">
              <RSICanvas Width="43.44828"
                         Height="41.96552"
                         TextElement.FontFamily="Arial"
                         TextElement.FontSize="12">
                <RSICanvas Name="Value_Dec_L"
                           Width="20"
                           Height="20"
                           Left="23.44828"
                           Top="21.96552">
                  <RSIButton x:Name="Button1"
                             Width="20"
                             Height="20"
                             Background="#FFD3D3D3">
                    <RSIButton.Animations>
                      <Animation />
                      <!--
                        dim New_PV as float;
                        dim limit as float;
                        
                        if option == "SPT" then
                        limit = PV_Max;
                        else
                        limit = 100;
                        endif;
                        
                        New_PV = PV - (((PV_Max - PV_Min) * 5) / limit);
                        If New_PV >= PV_Min then
                        PV = New_PV;
                        else
                        PV  = PV_Min;
                        endif;
                      -->
                    </RSIButton.Animations>
                  </RSIButton>
                  <RSICanvas Name="Group4"
                             Width="12"
                             Height="12"
                             Left="4"
                             Top="4">
                    <RSIPath x:Name="Polygon2"
                             Canvas.Top="11.99998"
                             Width="12"
                             Height="6"
                             Data="M0.5,0 L0,1 1,1 z"
                             Fill="#FF000000"
                             RenderTransformOrigin="0.0416666666666667,0.0833333333333333"
                             Stretch="Fill"
                             Stroke="#FF000000"
                             StrokeThickness="1">
                      <RSIPath.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="-1" />
                      </RSIPath.RenderTransform>
                      <RSIPath.Animations>
                        <Animation Condition="PV__lt;=_PV_Min">
                          <ChangeColor Color="#FFEFEFEF" />
                        </Animation>
                      </RSIPath.Animations>
                    </RSIPath>
                    <RSIPath x:Name="Polygon1"
                             Canvas.Top="5.99998000000002"
                             Width="12"
                             Height="6"
                             Data="M0.5,0 L0,1 1,1 z"
                             Fill="#FF000000"
