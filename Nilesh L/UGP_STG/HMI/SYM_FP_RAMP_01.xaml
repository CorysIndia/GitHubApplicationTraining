                      <RSIPath.Animations>
                        <Animation Condition="PV__gt;=_PV_Max">
                          <ChangeColor Color="#FFEFEFEF" />
                        </Animation>
                      </RSIPath.Animations>
                    </RSIPath>
                  </RSICanvas>
                </RSICanvas>
              </RSICanvas>
            </RSIGrid>
