                      <RSIPath.Animations>
                        <Animation Condition="PV__lt;=_PV_Min">
                          <ChangeColor Color="#FFEFEFEF" />
                        </Animation>
                      </RSIPath.Animations>
                    </RSIPath>
                  </RSICanvas>
                </RSICanvas>
                <RSICanvas Name="Value_Dec_S"
                           Width="20"
                           Height="20"
                           Left="9.99999999962142E-06"
                           Top="21.96552">
                  <RSIButton x:Name="Button1_1"
                             Width="20"
                             Height="20"
                             Background="#FFD3D3D3">
                    <RSIButton.Animations>
                      <Animation />
                      <!--
                        dim New_PV as float;
                        dim limit as float;
                        
                        if option == "SPT" then
                        limit = PV_Max;
                        else
                        limit = 100;
                        endif;
                        
                        New_PV = PV - (((PV_Max - PV_Min) * 1) / limit);
                        If New_PV >= PV_Min then
                        PV = New_PV;
                        else
                        PV  = PV_Min;
                        endif;
                      -->
                    </RSIButton.Animations>
                  </RSIButton>
                  <RSIPath x:Name="Polygon1_1"
                           Canvas.Left="5"
                           Canvas.Top="12.99998"
                           Width="9"
                           Height="7"
                           Data="M0.5,0 L0,1 1,1 z"
                           Fill="#FF000000"
                           RenderTransformOrigin="0.0555555555555556,0.0714285714285714"
                           Stretch="Fill"
                           Stroke="#FF000000"
                           StrokeThickness="1">
                    <RSIPath.RenderTransform>
                      <ScaleTransform ScaleX="1" ScaleY="-1" />
