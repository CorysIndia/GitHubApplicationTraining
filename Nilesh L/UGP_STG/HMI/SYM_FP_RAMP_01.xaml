                             Canvas.Left="9.99999999962142E-06"
                             Width="20"
                             Height="20"
                             Background="#FFD3D3D3">
                    <RSIButton.Animations>
                      <Animation />
                      <!--
                        dim New_PV as float;
                        dim limit as float;
                        
                        if option == "SPT" then
                        limit = PV_Max;
                        else
                        limit = 100;
                        endif;
                        
                        New_PV = PV + (((PV_Max - PV_Min) * 1) / limit);
                        If New_PV <= PV_Max then
                        PV = New_PV;
                        else
                        PV  = PV_Max;
                        endif;
                      -->
                    </RSIButton.Animations>
                  </RSIButton>
                  <RSIPath x:Name="Polygon1_2"
                           Canvas.Left="5.00001"
