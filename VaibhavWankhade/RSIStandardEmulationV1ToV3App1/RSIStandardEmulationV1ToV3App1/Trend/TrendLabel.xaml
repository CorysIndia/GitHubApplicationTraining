<RSIControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="RSIStandardEmulationV1ToV3App1.TrendLabel">

    <RSIStackPanel Orientation="Horizontal" Height="20" TextElement.FontSize="16">
        <RSIRectangle Width="20" Margin="10,0">
            <RSIRectangle.Animations>
                <Animation>
                    <ChangePropertyValue PropertyName="Fill" Value="$COLOR"/>
                </Animation>
            </RSIRectangle.Animations>
        </RSIRectangle>
        <RSIText Text="NAME" MinWidth="80" Margin="10,0" TextAlignment="Center" />
        <RSIText Text="MIN"  MinWidth="80" Margin="10,0" TextAlignment="Center" />
        <RSIText Text="MAX"  MinWidth="80" Margin="10,0" TextAlignment="Center" />
        <RSIText Text="CURRENT" MinWidth="80" Margin="10,0" TextAlignment="Center" />
        <RSIText Text="CURSOR" Margin="10,0" TextAlignment="Center" />
    </RSIStackPanel>
</RSIControl>